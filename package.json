{
  "name": "bukipin-saas",
  "version": "1.0.0",
  "private": true,
  "main": "backend/server.js",
  "scripts": {
    "dev": "node backend/server.js",
    "start": "node backend/server.js",
    "submodules": "git submodule update --init --recursive",
    "bootstrap": "npm run submodules && npm ci --prefix bukipin-login-seamless && npm ci --prefix bukipin-dashboard",
    "build:login": "npm run build --prefix bukipin-login-seamless",
    "build:dashboard": "npm run build --prefix bukipin-dashboard",
    "build": "npm run bootstrap && npm run build:login && npm run build:dashboard"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "nodemailer": "^6.9.15"
  }
}
